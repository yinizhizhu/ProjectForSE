<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/color_2"
    tools:context="com.sinaapp.yinizhizhublog.nutshell.ShowMovie">

    <TextView
        android:id="@+id/titleView"
        android:layout_marginTop="3.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fffcfc"
        android:gravity="center"
        android:textSize="24sp"
        android:text="title"/>
    <TextView
        android:id="@+id/showDate0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:text="上映日期：  "/>
    <TextView
        android:id="@+id/showDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:layout_toRightOf="@+id/showDate0"
        android:textSize="12sp"
        android:text="date"/>
    <TextView
        android:id="@+id/showScore0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleView"
        android:layout_toRightOf="@+id/showDate"
        android:textSize="12sp"
        android:text="   豆瓣评分： "/>
    <TextView
        android:id="@+id/showScore"
        android:layout_below="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/showScore0"
        android:textSize="12sp"
        android:text="score"/>
    <TextView
        android:id="@+id/showDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showDate"
        android:layout_alignParentLeft="true"
        android:textColor="#fffcfc"
        android:text="Details"/>

</RelativeLayout>

